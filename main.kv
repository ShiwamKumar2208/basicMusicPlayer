<MyGrid>
    size: self.size
    GridLayout:
        shuffle: 'shuffle'
        prev: 'prev'
        next: 'next'
        pauseButton: 'pause'
        cols: 1
        size: root.width, root.height
        Label:
            text: "Song is Playing"

        GridLayout:
            cols:4
            Button:
                id: "shuffle"
                on_press: root.shuffler()
                background_color: 1,1,1,1.0
                AsyncImage:
                    source: 'icons/shuffle.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: "prev"
                on_press: root.prevPressed()
                AsyncImage:
                    source: 'icons/prev.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: "pause"
                on_press: root.pauseOrPlay()
                AsyncImage:
                    source: 'icons/play.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: "next"
                on_press:root.nextPressed()
                AsyncImage:
                    source: 'icons/next.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
